<div class = "container">

    <div class = "row d-fex justify-content-center p-5"  >
    
        <div class = "col-md-4 border p-4  shadow rounded bg-light ">
            <div class="d-flex justify-content-center"><i class="fa fa-id-card-alt  fa-2x rounded-circle border shadow p-3 text-center"></i></div><hr>    
            <%= form_for :login,url:{ action: :check_credentials }  do |f| %>
                 <%= f.text_field :username , :class => "form-control", :placeholder =>"Username"%><br />
                 <%= f.password_field :password, :class => "form-control", :placeholder =>"Password" %><br />
                
                <%= f.submit "login", :class => "btn btn-outline-success"%>

            <% end %>
            <%if flash[:login_errors]%>
                <% flash[:login_errors].each do |msg| %>
                    <div class="alert alert-danger my-2">
                        <%= msg %>
                    </div>
                <% end %>
            <%end%>
        
        
        </div>
    
    </div>

</div>
