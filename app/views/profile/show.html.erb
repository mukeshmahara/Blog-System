<div class= "mt-4 pt-2 container ">

    <div class ="row ">
        <div class = "col-md-12 ">
            <div class=" text-center p-5 shadow-lg rounded" style="color:green; background-image:url('/assets/hacks.jpeg'); " >

                <img src="<%=url_for(@user.avatar)%>" class="profile-img shadow">
                
                <div>
                    <div class="badge bg-light text-success"><%=@user.username%></div>
                    <div class="badge mx-1 bg-light text-light border " >
                    <a href="<%=@user.insta_link%>" class="text-success"><i class="fab fa-instagram"></i></a>
                    <a href="<%=@user.fb_link%>" class="text-success"><i class="fab fa-facebook"></i></a>
                    <a href="<%=@user.fb_link%>" class="text-success"><i class="fab fa-linkedin"></i></a>
                    <a href="<%=@user.fb_link%>" class="text-success"><i class="fab fa-stack-overflow"></i></a>

                </div>
                </div>
               
                <table class="d-flex justify-content-center">
                    
                    
                </table>
                <div><%=@user.status%></div>
            </div>
        </div>
    </div>
</div>
<div class="contatiner-fluid">
    <div class="row">        

                <div class= "col-md-3  ">
                
                    <div class="col-md-12 bg-light rounded shadow px-3">
                    <hr>
                    <h3>About </h3>
                    <hr>
                        <table>
                            <tr>
                                <td class="p-2"> <i class="fas fa-envelope mx-2"></i></td>
                                <td><%=@user.email%> </td>
                            </tr> 
                            <tr >
                                <td class="p-2"><i class="fas fa-phone-square-alt mx-2 "></i></td>
                                <td><%=@user.phone_number%></td>
                                
                            
                            </tr>
                            <tr>
                                <td class="p-2">
                                    <i class="fas fa-briefcase mx-2"></i>
                                </td>
                                <td>
                                    <%=@user.job%> 
                                </td>
                            </tr>
                            <tr class=>
                                <td class="p-2"><i class="fas fa-birthday-cake mx-2"></i></td>
                                <%
                                year=Time.now.year - @user.age
                                month =Time.now.month
                                day =Time.now.day

                                
                                %>

                                <td><%=year%>-<%=month%>-<%=day%> </td>
                                
                            </tr>
                        </table>
                    </div>
                </div>
                <div class= "col-md-9 " >
                    <div class=" ">
                    
                        <% @blog.each do |blog| %>
                            <div class ="bg-light rounded p-4 shadow my-3">
                                <h2><%=blog.blog_title%></h2>
                                <small><%=blog.created_at.strftime('%b %d, %Y')%></small>
                                <div class = "" onclick="showMore()" class="cuorsor-pointer">
                                    <%=blog.content.to_plain_text.truncate_words(60)%>
                                </div>
                                <hr>
                                <footer class="blockquote-footer    ">&copy; <%=@user.username%> <cite title="Source Title"><%=@user.job%></cite></footer>

                                
                            </div>

                        <% end %>
                    
                    </div>
                </div>
            </div>
        
        </div>
    </div>


</div>